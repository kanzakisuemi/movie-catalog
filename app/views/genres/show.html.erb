

<div class="card border-dark mx-auto" style="max-width: 30rem; background-color: white;">
  <div class="card-body">  
    <%= render @genre %>

    <hr class="divider" />

    <div class="d-flex justify-content-center">
      <%= link_to "Back", genres_path, class: "btn btn-secondary d-inline mx-2" %>
      <%= link_to "Edit", edit_genre_path(@genre), class: "btn btn-secondary d-inline mx-2" %>
      <%= button_to "Delete", @genre, method: :delete, class: "btn btn-secondary d-inline mx-2" %>
    </div>
  </div>
</div>
