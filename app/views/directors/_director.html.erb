<div id="<%= dom_id director %>">
  <div class="d-flex justify-content-between">
    <span class="bold">Name:</span>
    <span > <%= director.name.capitalize %> </span>
  </div>
  <hr class="divider"/>

  <div class="d-flex justify-content-between">
    <span class="bold">Nationality:</span>
    <span> <%= director.nationality ? director.nationality.capitalize : "--" %> </span>
  </div>
  <hr class="divider"/>

  <div class="d-flex justify-content-between">
    <span class="bold">Birthday:</span>
    <span> <%= director.birthday.strftime('%d/%m/%Y') %> </span>
  </div>
  <hr class="divider"/>

  <div class="d-flex justify-content-between">
    <span class="bold">Favorite Genre:</span>
    <span> <%= director.favorite_genre.name ? director.favorite_genre.name.capitalize : "--" %> </span>
  </div>
  <hr class="divider"/>

  <span class="bold">Movies:</span>
  <% Movie.where(director: director).any? do %>
    <div class="list-group mt-3">
      <% Movie.where(director: director).each do |movie| %>
        <% movie.release_date ? year = movie.release_date.strftime('%Y') : "" %>
        <%= link_to movie, class: "list-group-item list-group-item-action border-dark d-flex justify-content-between" do %>
          <%= content_tag(:span, movie.title) %>
          <%= content_tag(:span, year) %>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>

